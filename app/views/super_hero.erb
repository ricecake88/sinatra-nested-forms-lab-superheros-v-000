
<h1>Create a Team and Heroes!</h1>
<form method="post" action="/team">
  <p>Team Name: <input type="text" name="team[name]"></p>
  <p>Team Motto: <input type="text" name="team[motto]"></p>
  <% 3.times do |index|%>
    <% index+=1 %>
    <h2>Hero <%= index %></h2>
    Hero's Name: <input type="text" id="member<%index%>_name" name="team[heroes][][name]"><br/>
    Hero's Power: <input type="text" id="member<%index%>_power" name="team[heroes][][power]"><br/>
    Hero's Biography: <input type="text" id="member<%index%>_biography" name="team[heroes][][bio]"><br/>
  <% end %>
  <input type="submit" name="submit" value="submit">
</form>